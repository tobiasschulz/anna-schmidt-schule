\end_layout

\begin_layout Standard
Hölderlin:
\end_layout

\begin_layout Itemize
Zweiteilung:
\end_layout

\begin_deeper
\begin_layout Itemize
positive Konnotation (selig, heilig, glänzend)
\end_layout

\begin_layout Itemize
negative Konnotation (schicksalslos, leidend, ungewiss)
\end_layout

\end_deeper
\begin_layout Standard
Goethe:
\end_layout

\begin_layout Itemize
Goethe sieht das Göttliche als Vorbild und als etwas durch Streben durchaus
 Erreichbares.
\end_layout

\begin_layout Standard
Hölderlin:
\end_layout

\begin_layout Itemize
Hölderlin sieht das Göttliche als etwas absolut Unerreichbares, als fernes
 Ideal.
\end_layout

